<Window x:Class="prilog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Список заявок" Height="450" Width="800">
    <Grid>
        <TextBox Name="SearchTextBox" Width="200" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Button Content="Поиск" Width="75" Height="25" Margin="220,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="SearchButton_Click"/>
        <DataGrid Name="RequestsDataGrid" Margin="10,50,10,10" AutoGenerateColumns="True"/>
        <Button Content="Добавить заявку" Width="150" Height="30" Margin="650,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="AddRequestButton_Click"/>

    </Grid>
</Window>
