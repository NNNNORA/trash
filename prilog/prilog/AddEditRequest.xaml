<Window x:Class="prilog.AddEditRequest"

        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить/Редактировать заявку" Height="400" Width="600">
    <Grid>
        <TextBlock Text="Номер заявки:" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="ApplicationIdTextBox" Width="200" Margin="150,10,10,0" VerticalAlignment="Top"/>

        <TextBlock Text="Дата добавления:" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <DatePicker Name="DateAddedPicker" Width="200" Margin="150,50,10,0" VerticalAlignment="Top"/>

        <TextBlock Text="Тип техники:" VerticalAlignment="Top" Margin="10,90,0,0"/>
        <ComboBox Name="EquipmentTypeComboBox" Width="200" Margin="150,90,10,0" VerticalAlignment="Top">
            <ComboBoxItem>Холодильник</ComboBoxItem>
            <ComboBoxItem>Стиральная машина</ComboBoxItem>
            <ComboBoxItem>Телевизор</ComboBoxItem>
        </ComboBox>

        <TextBlock Text="Модель техники:" VerticalAlignment="Top" Margin="10,130,0,0"/>
        <TextBox Name="ModelTextBox" Width="200" Margin="150,130,10,0" VerticalAlignment="Top"/>

        <TextBlock Text="Описание проблемы:" VerticalAlignment="Top" Margin="10,170,0,0"/>
        <TextBox Name="ProblemDescriptionTextBox" Width="200" Margin="150,170,10,0" VerticalAlignment="Top"/>

        <TextBlock Text="ФИО клиента:" VerticalAlignment="Top" Margin="10,210,0,0"/>
        <TextBox Name="CustomerNameTextBox" Width="200" Margin="150,210,10,0" VerticalAlignment="Top"/>

        <TextBlock Text="Номер телефона:" VerticalAlignment="Top" Margin="10,250,0,0"/>
        <TextBox Name="PhoneNumberTextBox" Width="200" Margin="150,250,10,0" VerticalAlignment="Top"/>

        <TextBlock Text="Статус заявки:" VerticalAlignment="Top" Margin="10,290,0,0"/>
        <ComboBox Name="StatusComboBox" Width="200" Margin="150,290,10,0" VerticalAlignment="Top">
            <ComboBoxItem>Новая заявка</ComboBoxItem>
            <ComboBoxItem>В процессе ремонта</ComboBoxItem>
            <ComboBoxItem>Завершена</ComboBoxItem>
        </ComboBox>

        <Button Content="Сохранить" Width="100" Height="30" Margin="200,330,10,10" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="SaveButton_Click"/>
    </Grid>
</Window>
